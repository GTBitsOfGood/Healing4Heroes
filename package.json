{
  "scripts": {
    "postinstall": "concurrently yarn:postinstall:*",
    "postinstall:backend": "cd backend/ && yarn install",
    "postinstall:mobile": "cd mobile/ && yarn install",
    "dev": "concurrently yarn:dev:*",
    "dev:backend": "yarn --cwd backend dev",
    "dev:mobile": "yarn --cwd mobile web",
    "secrets:windows": "yarn run secrets:windows --prefix backend",
    "secrets:linux": "yarn run secrets:linux --prefix backend",
    "build": "concurrently yarn:build:*",
    "build:backend": "yarn run build --prefix backend",
    "build:mobile": "yarn run build --prefix mobile",
    "lint": "concurrently yarn:lint:*",
    "lint:backend": "yarn run lint --prefix backend",
    "lint:mobile": "yarn run lint --prefix mobile",
    "format": "concurrently yarn:format:*",
    "format:backend": "yarn run format --prefix backend",
    "format:mobile": "yarn run format --prefix mobile",
    "start:backend": "yarn run dev --prefix backend",
    "start:mobile": "cd mobile && npx expo start",
    "start:mobile-tunnel": "cd mobile && npx expo start --tunnel"
  },
  "dependencies": {
    "concurrently": "^7.3.0"
  }
}